<%layout("layouts/boilerplate")-%>
    <div class="row mt-3">
        <div class="col-8 offset-2" ></div>
    <h2>Edit listing</h2>
    <form action="/listings/<%=listing._id%>?_method=put" method="post">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="Listings[title]" value="<%= listing.title %>" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="Listings[description]" value="<%= listing.description %>" class="form-control"><%= listing.description %></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image Link</label>
            <input type="text" name="Listings[image][url]" id="image-url" value="<%= listing.image.url %>" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="Listings[price]" value="<%= listing.price %>" class="form-control">
            </div>
            <div class="mb-3 col-8">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="Listings[country]" value= "<%= listing.country %>" class="form-control">
            </div>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" name="Listings[location]" value= "<%= listing.location %>" class="form-control">
        </div>
        <button class="btn btn-dark edit-btn mt-3">Edit</button>
    </form>
</div>

